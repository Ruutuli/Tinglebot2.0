{
  "name": "tinglebot-2.0-root",
  "version": "1.0.0",
  "description": "Root package.json for Tinglebot 2.0",
  "private": true,
  "scripts": {
    "start": "cd bot && npm run start",
    "dev": "concurrently \"npm run dev:bot\" \"npm run dev:dashboard\"",
    "dev:bot": "nodemon --watch bot --watch shared --exec \"node bot/index.js\"",
    "dev:dashboard": "nodemon --watch dashboard --watch shared --exec \"node dashboard/server.js\"",
    "deploy:commands": "node bot/scripts/deploy-commands.js",
    "install:dashboard": "cd dashboard && npm install"
  },
  "devDependencies": {
    "nodemon": "^3.0.0",
    "concurrently": "^8.2.0"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.16.0",
    "axios": "^1.7.9",
    "bottleneck": "^2.19.5",
    "compression": "^1.7.4",
    "connect-mongo": "^5.1.0",
    "cors": "^2.8.5",
    "discord.js": "^14.18.0",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "figlet": "^1.7.0",
    "google-auth-library": "^9.15.1",
    "googleapis": "^148.0.0",
    "helmet": "^7.1.0",
    "jimp": "^0.22.10",
    "mathjs": "^14.4.0",
    "moment": "^2.30.1",
    "mongoose": "^8.20.4",
    "mongodb": "^6.16.0",
    "mersenne-twister": "^1.1.0",
    "csv-parser": "^3.0.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "node-fetch": "^2.7.0",
    "passport": "^0.7.0",
    "passport-discord": "^0.1.4",
    "sharp": "^0.34.1",
    "uuid": "^9.0.1"
  }
}
