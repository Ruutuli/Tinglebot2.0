{
  "watch": [
    "embeds/**/*",
    "index.js",
    "commands/**/*",
    "handlers/**/*",
    "modules/**/*",
    "scripts/**/*",
    "scheduler.js",
    "utils/**/*",
    "../config/**/*",
    "../database/**/*",
    "../models/**/*",
    "../utils/**/*",
    "../data/**/*",
    "../services/**/*"
  ],
  "ignore": ["node_modules/**/*", "nodemon.log"],
  "ext": "js,json",
  "exec": "node index.js",
  "legacy-watch": true,
  "verbose": false,
  "exitcrash": true,
  "restartable": "rs",
  "delay": "1000",
  "maxRestarts": 10,
  "restartDelay": 3000
}