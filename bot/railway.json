{
    "$schema": "https://railway.com/railway.schema.json",
    "_comment": "Railway configuration for Bot Service - Discord bot application. IMPORTANT: In Railway UI, set Watch Paths to: /bot/**, /shared/**. Root directory should be project root (not bot/).",
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "runtime": "V2",
        "numReplicas": 1,
        "sleepApplication": true,
        "multiRegionConfig": {
            "us-east4-eqdc4a": {
                "numReplicas": 1
            }
        },
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10,
        "startCommand": "npm run start:bot",
        "healthcheckPath": "/health"
    }
}


