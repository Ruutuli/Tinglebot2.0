{
  "watch": [
    "embeds/**/*",
    "commands/**/*",
    "handlers/**/*",
    "scripts/**/*",
    "index.js",
    "modules/**/*",
    "../config/**/*",
    "../database/**/*",
    "../models/**/*",
    "../utils/**/*",
    "../data/**/*",
    "../services/**/*"
  ],
  "ignore": ["node_modules/**/*", "nodemon.log"],
  "ext": "js,json",
  "exec": "set NODE_ENV=production && node scripts/deploy-commands.js > nodemon.log 2>&1",
  "legacy-watch": true,
  "verbose": false,
  "delay": "1000"
}
