{
    "$schema": "https://railway.com/railway.schema.json",
    "_comment": "Railway configuration for Dashboard Service - Web dashboard application",
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "runtime": "V2",
        "numReplicas": 1,
        "sleepApplication": false,
        "multiRegionConfig": {
            "us-east4-eqdc4a": {
                "numReplicas": 1
            }
        },
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10,
        "startCommand": "cd dashboard && node server.js"
    }
}


