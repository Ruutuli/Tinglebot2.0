{
    "$schema": "https://railway.com/railway.schema.json",
    "_comment": "Railway configuration for Dashboard Service - Web dashboard application. IMPORTANT: In Railway UI, set Root Directory to: /dashboard. Watch Paths should be: ** (all files in dashboard/).",
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "runtime": "V2",
        "numReplicas": 1,
        "sleepApplication": false,
        "multiRegionConfig": {
            "us-east4-eqdc4a": {
                "numReplicas": 1
            }
        },
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10,
        "startCommand": "npm start",
        "healthcheckPath": "/health"
    }
}


